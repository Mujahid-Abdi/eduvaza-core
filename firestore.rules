rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read and write their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      // Allow creation during registration
      allow create: if request.auth != null && request.auth.uid == userId;
    }
    
    // Schools collection - allow read for all authenticated users, write for admins
    match /schools/{schoolId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Courses collection - allow read for authenticated users
    match /courses/{courseId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Quizzes collection - allow read/write for authenticated users
    match /quizzes/{quizId} {
      allow read, write: if request.auth != null;
    }
    
    // Quiz attempts - allow read/write for authenticated users
    match /quizAttempts/{attemptId} {
      allow read, write: if request.auth != null;
    }
    
    // Saved quizzes - users can only read/write their own saved quizzes
    match /savedQuizzes/{savedQuizId} {
      allow read: if request.auth != null && savedQuizId.matches(request.auth.uid + '_.*');
      allow write: if request.auth != null && savedQuizId.matches(request.auth.uid + '_.*');
    }
    
    // Opportunities - public read, admin write only
    match /opportunities/{opportunityId} {
      allow read: if true; // Public read access
      allow write: if request.auth != null; // Only authenticated users (admins) can write
    }
    
    // Enrollments - allow read/write for authenticated users
    match /enrollments/{enrollmentId} {
      allow read, write: if request.auth != null;
    }
    
    // Allow all authenticated users to read/write for now (development mode)
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}